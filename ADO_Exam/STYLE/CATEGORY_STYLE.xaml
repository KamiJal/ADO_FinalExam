<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:ADO_Exam.STYLE">

    <Style x:Key="InputTextboxDefault" TargetType="{x:Type TextBox}">
        <Setter Property="VerticalContentAlignment" Value="Center"/>
        <Setter Property="Height" Value="25"/>
        <Setter Property="Margin" Value="5 0 0 0"/>
        <Setter Property="FontSize" Value="11"/>
        <Setter Property="Padding" Value="5 0 5 0"/>
    </Style>

    <Style x:Key="InputTextboxCategory" TargetType="{x:Type TextBox}"
               BasedOn="{StaticResource InputTextboxDefault}">
        <Setter Property="Width" Value="200"/>
    </Style>

    <Style x:Key="InputTextboxRSS" TargetType="{x:Type TextBox}"
               BasedOn="{StaticResource InputTextboxDefault}">
        <Setter Property="Width" Value="320"/>
    </Style>

    <Style x:Key="SaveBTNStyle" TargetType="{x:Type Button}">
        <Setter Property="Width" Value="100"/>
        <Setter Property="Content" Value="СОХРАНИТЬ"/>
        <Setter Property="Height" Value="25"/>
    </Style>
    
</ResourceDictionary>